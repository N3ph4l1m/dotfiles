// Place your key bindings in this file to override the defaults
[
// Project manager list projects
{
    "key": "ctrl+meta+p",
    "command": "projectManager.listProjects#sideBarGit"
},
{
    "key": "ctrl+w","command": "expand_region", "when": "editorTextFocus"
},
// Expand Region
{
    "key": "ctrl+shift+w","command": "undo_expand_region", "when": "editorTextFocus && editorHasSelection"
},
{
    "key": "ctrl+e",
    "command": "workbench.action.toggleSidebarVisibility"
},
{
    "key": "ctrl+e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "editorTextFocus"
},
{
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
},
{
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
},
{
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && !inputFocus"
},
{
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && !inputFocus"
},
{
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
},
]